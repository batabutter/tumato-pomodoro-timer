{
    "compilerOptions": {
        "target": "es2022",
        "module": "nodenext",
        "rootDir": "src",
        "outDir": "build",
        "strict": true,
        "moduleResolution": "nodenext",

        "lib": ["dom", "esnext"],
        "types": ["node", "electron"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "skipLibCheck": false,

        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ]
}